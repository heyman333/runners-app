{
  "name": "runners",
  "version": "1.0.0",
  "description": "Runners monorepo with client and server packages",
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build",
    "publish": "lerna publish",
    "start:client": "npm run start --workspace=@runners/client",
    "android": "npm run android --workspace=@runners/client",
    "ios": "npm run ios --workspace=@runners/client",
    "web": "npm run web --workspace=@runners/client",
    "lint": "npm run lint --workspace=@runners/client"
  },
  "devDependencies": {
    "lerna": "^8.2.3"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
